<head>
  <style>
    .card {
      background-image: linear-gradient(to right, #2c3e50, #4ca1af);
      /* background-color: rgb(16, 190, 248); */
      color: white;
    }
    .ca{
      color: white;
    }
  </style>
</head>

<body>
  <!-- Your HTML code here -->
  <div class="mb-5 p-5">
    <% for( let project of projects ) { %>
      <div class="card mb-2 w-50 m-auto">
        <div class="card-header">
          <strong> Name of the project : </strong>
          <%= project.name %>
        </div>
        <div class="card-body">
          <h6 class="card-subtitle mb-2 text-muted">
            <strong class="ca"> Author :  <%= project.author %></strong>
           
          </h6>
          <p class="card-text">
            <strong> Description : </strong>
            <%= project.description %>
          </p>

          <div class="m-auto text-end">
            <a href="/project/<%=project._id%>" class="btn btn-warning m-auto">Open project</a>
          </div>
        </div>
      </div>
      <% } %>
  </div>
</body>